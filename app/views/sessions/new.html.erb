
<div class="login-header">
<h1>Log in or <%=link_to "Create a New User", new_user_path%></h1>

<div class="error"><%= flash.notice %></div><br>

<div class="container login">
<%= form_tag "/login" do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %><br>
    <%= label_tag :password %>
    <%= password_field_tag :password %><br>
    <%= submit_tag "Login" %>
<% end %>
</div>
</div>
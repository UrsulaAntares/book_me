<h1>New Artist Form</h1>

<%=form_for @artist do |f|%>
<%=f.label :name%>
<%=f.text_field :name%><br>

<%=f.label :description%>
<%=f.text_field :description%><br>
<%=f.label "Genre tags"%>
<%=f.collection_check_boxes :genre_ids, Genre.all, :id, :name%><br>
<%=f.fields_for :genres, @artist.genres.build do |g|%>
<%=g.text_field :name%><br>
<%end%>
<%=f.submit "Create Artist"%>
<%end%>


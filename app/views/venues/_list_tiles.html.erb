
<% @venues.each do |venue| %>

        <div class="tile <%= current_user && venue.users.include?(current_user) && ! @artist ? "mine" : "" %> 
            <%= @artist && @artist.venues.include?(venue) ? "endorsed" : "" %>">
            <a href="<%=venue_path(venue)%>">

                <%if venue.picture.attached?%>
                    <%=image_tag venue.picture, class: "headshot" %>
                 <%elsif venue.image_url%>
                     <%= image_tag venue.image_url, class: "headshot" %>
                 <%end%>
                <p ><%= venue.name %></p>
            </a>
                <p><%= venue.location %> </p>
        </div>
<% end %>

